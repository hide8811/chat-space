.main
  .main__header
    .main__header--group
      .group-name
        = @group.name
      .member-name
        Memberï¼š
        - @group.users.each do |user|
          = user.name

    .main__header--group-Edit
      = link_to "Edit", edit_group_path(@group), class: "edit-btn"

  .main__area
    = render @messages

  .main__footer
    = form_for [@group, @message] do |f|
      .input
        .input__form
          = f.text_field :text, class: 'input__form--text', placeholder: 'type a message'
          = f.label :image do
            = icon('far', 'image', class: 'input__form--image')
            = f.file_field :image, class: 'image-file'
        = f.submit "Send", class: "input__btn"
